@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}


<section id="download-app">
    <div class="container">
        <div class="download-image">
            <img src="~/images/other/downloadapp-screens.svg"  alt="two phones displaying the app" />

        </div>


        <div class="content">
            <h1>Download Our App for Any Devices:</h1>
            <div class="download-app-group">
                <p class="store">App Store</p>
                <div class="rating">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <div class="download">
                    <div class="download-info">
                        <h4>Editor's choice</h4>
                        <p class="statistics">4.7, 187K+ reviews</p>
                    </div>
                    <img src="~/images/other/@(isDark ? "appstore-download-dark.svg" : "appstore-download-light.svg")"/>
                    
                </div>

                <p class="store">Google Play</p>
                <div class="rating">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <div class="download">
                    <div class="download-info">
                        <h4>App of the Day</h4>
                        <p class="statistics">rating 4.8, 30K+ reviews</p>
                    </div>
                    <img src="~/images/other/@(isDark ? "googleplay-download-dark.svg" : "googleplay-download-light.svg")" />

                </div>


            </div>
        </div>

    </div>
</section>