
@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
}

<!DOCTYPE html>
<html lang="en" class="@themeMode">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Silicon</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome-free-6.5.2-des" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    <script defer src="~/js/validation.js" asp-append-version="true"></script>
    <script defer src="~/js/categories.js" asp-append-version="true"></script>
    <script defer src="~/js/saveCourse.js" asp-append-version="true"></script>
    <script defer src="~/js/darkMode.js" asp-append-version="true"></script>


    <script defer src="https://kit.fontawesome.com/f53f99e76c.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="wrapper">
        <partial name="_Header" />
        @RenderBody()
        <partial name="_Footer" />
    </div>


    @*<partial name="_CookieConsent" />*@

</body>
</html>
