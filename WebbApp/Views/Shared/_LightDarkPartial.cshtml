@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}

<section id="lightdark">
    <div class="@(isDark ? "dark-bg-dark" : "dark-bg-light")"></div>


    <div class="container">
        <div class="title">
            <h1 class="light">Switch Between</h1>
            <h1 class="dark">Light & Dark Mode</h1>
        </div>

        <img src="~/images/other/mockup.svg" />
    </div>
</section>