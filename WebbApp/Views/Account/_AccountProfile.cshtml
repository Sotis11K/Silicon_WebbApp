
@{
    var user = await UserManager.GetUserAsync(User);
}

@if (user != null)
{
    <img src="~/images/uploads/profiles/@user.ProfileImage" alt="@user.FirstName @user.LastName" />

    <form enctype="multipart/form-data" method="post" asp-action="UploadProfileImage" asp-controller="Account">
        <input id="fileUploader" type="file" name="file" hidden/>
        <label for="fileUploader" class="btn btn-circle btn-circle-sm"><i class="fa-solid fa-arrows-rotate"></i></label>
    </form>


    <h5>@($"{Model.BasicInfo.FirstName} {Model.BasicInfo.LastName}")</h5>
    <p>@Model.BasicInfo.Email</p>
    <nav>
        <a class="btn-theme-s" asp-page="/Details"><i class="fa-solid fa-gear"></i>Account Details</a>
        <a class="btn-transparent" asp-page="/Security"><i class="fa-solid fa-lock"></i>Security</a>
        <a class="btn-transparent" asp-page="/SavedCourses"><i class="fa-regular fa-bookmark"></i>Saved Courses</a>
        <a class="btn-transparent" asp-action="signout" asp-controller="Auth"><i class="fa-solid fa-arrow-right-from-bracket"></i>Sign Out</a>
    </nav>

}