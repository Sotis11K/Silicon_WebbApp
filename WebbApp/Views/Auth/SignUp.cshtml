@using WebbApp.ViewModels
@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<section id="signip">
    <div class="container">


        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }


        <form method="post" asp-action="SignUp" asp-controller="Auth" novalidate>
            <h1>Create Account</h1>
            <p>Already have an account?<a asp-controller="Auth" asp-action="SignIn"> Sign up here</a></p>
            <div class="content">

                <div id="form-firstname" class="input-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName">
                    <span asp-validation-for="FirstName"></span>
                </div>

                <div id="form-lastname" class="input-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName">
                    <span asp-validation-for="LastName"></span>

                </div>
                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email">
                    <span asp-validation-for="Email"></span>

                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password">
                    <span asp-validation-for="Password"></span>

                </div>
                <div id="form-confirmpassword" class="input-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>

                </div>

                <div id="form-checkbox" class="checkbox-group">
                    <input asp-for="TermsAndConditions">
                    <label asp-for="TermsAndConditions"></label>
                </div>
                <span asp-validation-for="TermsAndConditions"></span>



                <div id="form-button">
                    <button class="btn-theme-s" type="submit"><i class="fa-regular fa-arrow-left-to-bracket"></i>Sign up</button>
                </div>


                <a id="forgot-password" asp-page="/forgot">Forgot your password?</a>

                <hr>

                <div id="external-signin">
                    <a class="btn-gray"><i class="fa-brands fa-google"></i>Google</a>
                    <a class="btn-gray"><i class="fa-brands fa-facebook-f"></i>Facebook</a>

                </div>

            </div>
        </form>


    </div>
</section>
